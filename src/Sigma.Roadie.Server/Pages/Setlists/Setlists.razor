@page "/setlists"

@code {

    List<Domain.DataModels.Setlist> Model;


    protected override async Task OnInitializedAsync()
    {
        Model = await SetlistService.GetSetlists();
    }


}


<h1>Setlists</h1>
<br />
<a class="btn btn-primary" href="/setlist/@Guid.Empty">Agregar Setlist</a>
<br />

@if (Model != null)
{

    <table class="table">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Descripción</th>
                <th>Duración</th>
            </tr>
        </thead>


        <tbody>
            @foreach (var setlist in Model)
            {
            <tr>
                <td><a href="/setlist/@setlist.SetlistId">@setlist.Name</a></td>
                <td>@setlist.Description</td>
                <td>@setlist.TotalLenght</td>
            </tr>
            }
        </tbody>
    </table>

}